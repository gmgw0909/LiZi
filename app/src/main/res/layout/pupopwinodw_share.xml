<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffafafa"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/btn_weixin"
            android:gravity="center"
            android:text="微信好友"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/quan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/btn_share_quan"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/btn_share_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/btn_kongjian"
            android:gravity="center"
            android:text="QQ空间"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_yuanjiao_withesolid"
        android:gravity="center"
        android:text="取消"
        android:textSize="16sp" />

</LinearLayout>
